@model List<DesignPattern.Repository.EntityLayer.Concrete.Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Category/AddCategory" class="btn btn-success">Ekle</a>
</div>