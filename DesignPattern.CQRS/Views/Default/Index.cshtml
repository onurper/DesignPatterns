@model List<DesignPattern.CQRS.CQRSPattern.Results.GetProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<br />
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün</th>
            <th>Fiyat</th>
            <th>Stock</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductId
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Stock
                </td>
                <td>
                    <a a href="/Default/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a a href="/Default/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a>
                </td>
                <td>
                    <a a href="/Default/GetProduct/@item.ProductId" class="btn btn-success">Ürüne Git</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Default/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>